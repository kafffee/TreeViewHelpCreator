<Application x:Class="Application"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:FileAndFolderBrowser.App"
  
    StartupUri="MainWindow.xaml">
    <Application.Resources>

        <!--<SolidColorBrush x:Key="VordergrundfarbeBrush">#816D4F</SolidColorBrush>-->
        <SolidColorBrush x:Key="VordergrundfarbeBrush">White</SolidColorBrush>
        <Style TargetType="{x:Type Button}">
            <Setter Property="Background" Value="{DynamicResource VordergrundfarbeBrush}"/>
            <Setter Property="Foreground" Value="Black"/>
        </Style>
    </Application.Resources>
    
</Application>
